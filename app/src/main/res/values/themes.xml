<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pokemon_red</item>
        <item name="colorSecondary">@color/pokemon_red</item>

        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:fontFamily">@font/pokemon</item>

        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item> <item name="android:popupMenuStyle">@style/EstiloMenuPokemon</item>
        <item name="popupMenuStyle">@style/EstiloMenuPokemon</item>
    </style>

    <style name="EstiloMenuPokemon" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/fundo_menu_vermelho</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:itemTextAppearance">@style/TextoMenuBranco</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="TemaWrapperMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="popupMenuStyle">@style/EstiloMenuPokemon</item>
        <item name="android:popupMenuStyle">@style/EstiloMenuPokemon</item>
    </style>

    <style name="TextoMenuBranco" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>